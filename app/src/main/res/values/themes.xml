<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CiputraMitraHospital" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/parentColor</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="android:colorPrimary">@color/parentColor</item>
        <item name="postSplashScreenTheme">@style/Theme.CiputraMitraHospital</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
</resources>